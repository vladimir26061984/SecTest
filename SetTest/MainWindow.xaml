<Window x:Class="SetTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SetTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1cm"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" >
            <Button DockPanel.Dock="Left" Width="0.8cm" Height="0.8cm" Margin="2,2,2,2" x:Name="butOpen">1</Button>
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">Наименование дисциплины</TextBlock>
            <TextBox  VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>
            <Button DockPanel.Dock="Right" Width="0.8cm" Height="0.8cm" Margin="2,2,2,2" x:Name="butSave">2</Button>
            
            
        </DockPanel>
    </Grid>
</Window>
